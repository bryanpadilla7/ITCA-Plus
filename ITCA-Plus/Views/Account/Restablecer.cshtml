
@{
    ViewBag.Title = "Restablecer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}

@if (ViewBag.mensaje != null)
{
    <script>
        const mensaje = @Html.Raw(Json.Encode(ViewBag.mensaje));
        Swal.fire({
            icon: 'success',
            title: 'Información',
            text: mensaje,
            confirmButtonText: 'Aceptar',
            confirmButtonColor: '#3085d6'
        }).then((result) => {
            if (result.isConfirmed) {              
                window.location.href = '@Url.Action("Login", "Account")';
            }
        });
    </script>
}

<main class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow border-0 p-4 rounded-4" style="max-width: 450px; width: 100%;">
        <div class="card-body">
            <h3 class="text-center mb-4">Restablecer Contraseña</h3>
            <p class="text-center text-muted mb-4">Ingresa tu nueva contraseña</p>

            @using (Html.BeginForm("Restablecer", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    @Html.Label("Correo electrónico", htmlAttributes: new { @class = "form-label"})
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input type="email" name="correo" class="form-control" value="@ViewBag.Correo" style = "max-width: none" readonly />
                    </div>
                </div>

                <div class="mb-3">
                    @Html.Label("Nueva contraseña", htmlAttributes: new { @class = "form-label"})
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" name="nuevaContrasena" class="form-control" placeholder="Nueva contraseña"  style = "max-width: none" required />
                    </div>
                </div>

                <div class="mb-3">
                    @Html.Label("Confirmar contraseña", htmlAttributes: new { @class = "form-label" })
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" name="confirmarContrasena" class="form-control" placeholder="Repite la contraseña" style = "max-width: none" required />
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success rounded-pill">
                        <i class="bi bi-arrow-repeat me-2"></i> Restablecer
                    </button>
                </div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3 text-center">
                    @ViewBag.Error
                </div>
            }
        </div>
    </div>
</main>


