<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--LIBRERIAS EXTRAS-->
    <!--font awesome para los iconos-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- CDN de Toastr (agrega en Layout) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!--iconos bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- validacion frontend -->
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <style>
        .icon-navbar {
            width: 100px;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            transition: width 0.3s ease;
            overflow: hidden;
            position: fixed;
            height: 100vh;
            border-radius: 0px 15px 15px 0px;
            z-index: 100;
        }

            .icon-navbar:hover {
                width: 200px;
            }

            .icon-navbar .nav-link {
                display: flex;
                flex-direction: row; /* ← cambio: texto a la derecha */
                align-items: center;
                justify-content: flex-start;
                color: white;
                padding: 1rem;
                transition: background 0.2s;
                position: relative;
            }

                .icon-navbar .nav-link:hover {
                    background-color: rgba(255, 255, 255, 0.15);
                }

            .icon-navbar .nav-icon {
                font-size: 1.5rem;
                margin-right: 0.75rem;
            }

            .icon-navbar .nav-label {
                font-size: 0.9rem;
                display: none;
                border-left: 1px solid rgba(255, 255, 255, 0.4); /* ← línea separadora */
                padding-left: 0.75rem;
                color: white;
            }

            .icon-navbar:hover .nav-label,
            .icon-navbar.active .nav-label {
                display: inline;
                width: 100px;
            }

        .mobile-menu-btn {
            display: none;
        }

        .dropdown-menu {
            background-color: #343a40;
        }

            .dropdown-menu .dropdown-item {
                color: white;
            }

                .dropdown-menu .dropdown-item:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                }
       
        /* Estilos solo para pantallas pequeñas */
        @@media (max-width: 830px) {
            .icon-navbar {
                width: 0;
                overflow: hidden;
                transition: width 0.3s ease;
            }

                .icon-navbar.active {
                    width: 200px;
                }

            .mobile-menu-btn {
                display: block;
                position: fixed;
                top: 15px;
                z-index: 101;
                background-color: #007bff;
                color: white;
                border: none;
                padding: 10px 15px;
                border-radius: 5px;
                font-size: 18px;
            }
        }
    </style>

    <script>
    $(function () {
        @if (TempData["mensaje"] != null)
        {
            var tipo = TempData["tipo"] ?? "info";
            <text>
                toastr.options = {
                    "closeButton": true,
                    "progressBar": true,
                    "positionClass": "toast-top-right",
                    "timeOut": "4000"
                };
                toastr["@tipo"]("@TempData["mensaje"]");
            </text>
        }
    });
    </script>

</head>
@{
    var cliente = Session["cuenta"] as ITCA_Plus.Models.Usuarios;
}
<body>
    <!-- Botón de menú móvil -->
    <button id="mobile-toggle" class="mobile-menu-btn">
        <i class="fas fa-bars"></i>
    </button>
    @if (cliente != null)
    {
        <nav class="icon-navbar d-flex flex-column align-items-center">
            <p class="d-block fw-bold text-center mt-3 text-white">ITCAPlus</p>

            <p class="d-block fw-bold text-center mt-1 mb-4 text-white"><strong>@cliente.usuario</strong></p>

            @if (Session["rolUsuario"].ToString() == "Docente")
            {
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-home nav-icon"></i>
                    <span class="nav-label">Inicio</span>
                </a>

                <a class="nav-link" href="@Url.Action("CuadroCalificaciones", "notas")">
                    <i class="fas fa-table nav-icon"></i>
                    <span class="nav-label">Calificaciones</span>
                </a>



                <!-- Dropdown Materias -->
                <div class="nav-link dropdown">
                    <i class="fas fa-book-open nav-icon dropdown-toggle" data-bs-toggle="dropdown"></i>
                    <span class="nav-label">Materias</span>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Asistencia", "Index", "Materia", null, new { @class = "dropdown-item" })</li>
                    </ul>
                </div>

                <!-- Dropdown Gestión Alumnos -->
                <div class="nav-link dropdown">
                    <i class="fas fa-file-alt nav-icon dropdown-toggle" data-bs-toggle="dropdown"></i>
                    <span class="nav-label">Reportes</span>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Notas alumno", "NotasPorAlumno", "Reporte", null, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Notas anuales", "NotasAnuales", "Reporte", null, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Asistencia", "Asistencia", "Reporte", null, new { @class = "dropdown-item" })</li>
                    </ul>
                </div>

            }
            else if (Session["rolUsuario"].ToString() == "Admin")
            {
                <a class="nav-link" href="@Url.Action("Index", "Admin")">
                    <i class="fas fa-home nav-icon"></i>
                    <span class="nav-label">Inicio</span>
                </a>

                <a class="nav-link" href="@Url.Action("CambiosEdicion", "Edition")">
                    <i class="fas fa-table nav-icon"></i>
                    <span class="nav-label">Permiso edición</span>
                </a>

                <!-- Dropdown Gestión Alumnos -->
                <div class="nav-link dropdown">
                    <i class="fas fa-user-graduate nav-icon dropdown-toggle" data-bs-toggle="dropdown"></i>
                    <span class="nav-label">Alumnos</span>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Registrar", "Alumnos", "Alumno", null, new { @class = "dropdown-item" })</li>
                    </ul>
                </div>

                <div class="nav-link dropdown">
                    <i class="fas fa-file-alt nav-icon dropdown-toggle" data-bs-toggle="dropdown"></i>
                    <span class="nav-label">Agregar</span>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Docente", "AgregarDocente", "Admin", null, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Materia", "Materia", "Admin", null, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Grado", "Index", "GradoMateria", null, new { @class = "dropdown-item" })</li>
                    </ul>
                </div>

                <div class="nav-link dropdown">
                    <i class="fas fa-file-alt nav-icon dropdown-toggle" data-bs-toggle="dropdown"></i>
                    <span class="nav-label">Reportes</span>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Perfiles usuarios", "ReporteUsuarios", "Reporte", null, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Materias", "ReporteMaterias", "Reporte", null, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Grados", "ReporteGrados", "Reporte", null, new { @class = "dropdown-item" })</li>
                    </ul>
                </div>

            }


            <a class="nav-link" href="#" onclick="confirmLogoutSwal(event)">
                <i class="fa-solid fa-right-from-bracket nav-icon"></i>
                <span class="nav-label">Cerrar Sesión</span>
            </a>
        </nav>
    }


        <div class="container body-content">
            @RenderBody()
            @if (cliente != null)
            {
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
                </footer>
            }
        </div>

        <script>
    function confirmLogoutSwal(event) {
        event.preventDefault();

        Swal.fire({
            title: '¿Cerrar sesión?',
            text: "¿Estás seguro de que deseas salir?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sí, salir',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '@Url.Action("Logout", "Account")';
            }
        });
    }
        </script>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
        <script>
            $(document).ready(function () {
                $('#mobile-toggle').on('click', function () {
                    $('.icon-navbar').toggleClass('active');
                });
            });
        </script>

    </body>
</html>
