
@{
    ViewBag.Title = "Asistencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="https://editorescientificos.cl/wp-content/uploads/2023/05/Cuales-son-los-niveles-de-educacion-en-Chile.jpg" 
                 class="img-fluid rounded-start"
                 style="height: 100%; max-height: 200px; object-fit: cover;">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title" style="color: #435D7D;">Listado de asistencia</h5>
                <div class="row">
                    <div class="col-md-6">
                        <p class="card-text"><strong>Materia:</strong></p>
                        <p class="card-text"><strong>Fecha:</strong></p>
                        <p class="card-text"><strong>Docente:</strong></p>
                    </div>
                    <div class="col-md-6">
                        <p class="card-text"><strong>Grado:</strong></p>
                        <p class="card-text"><strong>Sección:</strong></p>
                        <p class="card-text"><strong>Horario:</strong></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #435D7D;">
        <h5 class="mb-0 text-white">Lista de asistencia</h5>
    </div>

    <div class="card-body">
        <table class="table">
            <thead>
                <tr style="color: #435D7D;">
                    <th>Carnet</th>
                    <th>Nombre alumno</th>
                    <th>Asistio</th>
                    <th>Falta</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (ITCA_Plus.Models.Alumno item in ViewBag.alumnos)
                    {
                        <tr>
                            <td>@item.carnet</td>
                            <td>@item.nombre</td>
                            <td><input type="radio" /></td>
                            <td><input type="radio" /></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
